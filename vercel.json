{
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "https://api.litekart.in/api/:path*"
		},
		{
			"source": "/sitemap/:path*",
			"destination": "https://s3.ap-south-1.amazonaws.com/litekart.in/sitemap/:path*"
		},
		{
			"source": "/proxytown/gtm",
			"destination": "https://www.googletagmanager.com/gtag/js"
		},
		{
			"source": "/proxytown/ga",
			"destination": "https://www.google-analytics.com/analytics.js"
		}
	],
	"env": {
		"PUBLIC_LITEKART_API_URL": "https://api.litekart.in",
		"NODE_OPTIONS": "--max-old-space-size=7680"
	},
	"regions": ["bom1"]
}
